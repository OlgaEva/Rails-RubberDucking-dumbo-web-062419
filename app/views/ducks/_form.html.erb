<% if flash[:errors] %>
<ul> Errors: <%= flash[:errors].each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

    <%= form_for @duck do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :student_id %>
        <%= f.collection_select(:student_id, @students, :id, :name) %>
        <%= f.submit %>
        <% end %>

